#!/bin/sh
#
# Copyright 2007-2009 (C) Mike McCormack
#
# Test launching script
# Copies a test executable onto the c: drive and runs it
#

kernel="./kernel/ring3k-bin"
if test \! -x "$kernel"
then
	echo "kernel binary (ring3k-bin) not present"
	exit 1
fi

while test "x$1" != "x"
do
	case $1 in
	-d)
		debug=1
		shift
		;;
	-t)
		trace=1
		shift
		;;
	--trace*)
		tracespec=$1
		shift
		;;
	--r*)
		shift
		registry="-r $1"
		if [ "$1" = "redis" ]; then
			echo "executing redis clean up script"
			killall -9 redis-server
			SCRIPTPATH=`pwd -P`
			cp -n ./redis/original.rdb ./redis/redis.rdb
			redis-server --dir "$SCRIPTPATH/redis" 2>/dev/null &
		fi
		shift
		;;
	-v)
		valgrind=1
		shift
		;;
	*)
		t="$1.exe"
		shift
		;;
	esac
done

if [ ! -d drive ]
then
	sh ring3k-setup
fi

if [ ! -d drive ]
then
	exit 1
fi

# copy the test into the NT directory
cp -f "tests/win2k/ntwin32.dll" drive
cp -f "tests/$t" drive/tests
ntexepath="\\??\\c:\\tests\\$t"
exec ${valgrind:+"valgrind"} "$kernel" ${debug:+"-d"} ${tracespec} ${registry} ${tt:+"-s"} ${quiet:+"-q"} ${trace:+"-t"} "$ntexepath"
